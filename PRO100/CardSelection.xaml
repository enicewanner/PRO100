        <Image x:Name="Card8" HorizontalAlignment="Left" Height="111" Margin="362,258,0,0" VerticalAlignment="Top" Width="79" Source="/TestCard.PNG" Cursor="Hand" MouseLeftButtonDown="Card1_MouseLeftButtonDown"/>
        <Image x:Name="Card9" HorizontalAlignment="Left" Height="111" Margin="507,258,0,0" VerticalAlignment="Top" Width="79" Source="/TestCard.PNG" Cursor="Hand" MouseLeftButtonDown="Card1_MouseLeftButtonDown"/>
        <Image x:Name="Card10" HorizontalAlignment="Left" Height="111" Margin="655,258,0,0" VerticalAlignment="Top" Width="79" Source="/TestCard.PNG" Cursor="Hand" MouseLeftButtonDown="Card1_MouseLeftButtonDown"/>
        <Border x:Name="CardBorder1" BorderBrush="Black" BorderThickness="5,5,5,5" Width="86" Height="122" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="67,92,0,0" Visibility="Hidden"/>
        <Border x:Name="CardBorder2" BorderBrush="Black" BorderThickness="5,5,5,5" Width="86" Height="122" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="208,92,0,0" Visibility="Hidden"/>
        <Border x:Name="CardBorder3" BorderBrush="Black" BorderThickness="5,5,5,5" Width="88" Height="122" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="356,92,0,0" Visibility="Hidden"/>
        <Border x:Name="CardBorder4" BorderBrush="Black" BorderThickness="5,5,5,5" Width="86" Height="122" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="502,92,0,0" Visibility="Hidden"/>
        <Border x:Name="CardBorder5" BorderBrush="Black" BorderThickness="5,5,5,5" Width="86" Height="122" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="650,92,0,0" Visibility="Hidden"/>
        <Border x:Name="CardBorder6" BorderBrush="Black" BorderThickness="5,5,5,5" Width="86" Height="122" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="67,252,0,0" Visibility="Hidden"/>
